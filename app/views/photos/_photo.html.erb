<h1>
  <%= @photo.name %>
</h1>

  <%= render 'navarrows' %>

  <% if @photo.image? %>
    <%= link_to @photo.previous do %>
      <%= image_tag @photo.image_url, id: "galleryimage" %>
    <% end %>
  <% end %>

<%= render 'submitted_by' %>

  <div class="captionarea">
    <%= render 'caption' %>

    <%= render 'likes' %>
    <br /><br />
    <% if current_user %>
      <%= render 'comments' %>
      <hr>
      <%= render 'post_comment' %>
    <% end %>
  </div>

  <div class="quicknav">
    <%= render 'quicknav' %>
  </div>
