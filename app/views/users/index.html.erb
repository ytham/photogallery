<h1>
  All Users
</h1>

<% @users.each do |u| %>
  <div class="show_all">
    <%= u.id %>: <%= link_to u do %><%= image_tag show_avatar_thumb(u) %><%= u.name %><% end %><br>
    <% if !current_user?(u) %>
      <small>(<%= link_to "delete", u, method: :delete, data: { confirm: "Are you sure?" } %>)</small>
    <% end %>
  </div>
<% end %>